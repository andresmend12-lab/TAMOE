{
  "rules": {
    "users": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
      ".indexOn": ["email", "role", "department"],

      "$uid": {
        ".read": "$uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'",
        ".write": "$uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'",
        ".validate": "newData.hasChildren(['username', 'email'])",

        "username": {
          ".validate": "newData.isString() && newData.val().length >= 2 && newData.val().length <= 50"
        },
        "email": {
          ".validate": "newData.isString() && newData.val().matches(/^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/)"
        },
        "department": {
          ".validate": "newData.isString() && newData.val().length <= 100"
        },
        "profile_picture": {
          ".validate": "newData.isString()"
        },
        "role": {
          ".validate": "newData.isString() && newData.val().matches(/^(admin|editor|viewer)$/)",
          ".write": "root.child('users').child(auth.uid).child('role').val() === 'admin'"
        },
        "permissions": {
          ".write": "root.child('users').child(auth.uid).child('role').val() === 'admin'"
        }
      }
    },

    "clients": {
      ".read": "auth != null",
      ".indexOn": ["createdBy", "createdAt", "name", "manageId"],

      "$clientId": {
        ".write": "auth != null && (
          root.child('users').child(auth.uid).child('role').val() === 'admin' ||
          root.child('users').child(auth.uid).child('role').val() === 'editor' ||
          (!data.exists() && auth != null) ||
          data.child('createdBy').val() === auth.uid
        )",
        ".validate": "newData.hasChildren(['name', 'createdAt', 'createdBy'])",

        "name": {
          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 200"
        },
        "createdAt": {
          ".validate": "newData.isString()"
        },
        "createdBy": {
          ".validate": "newData.isString() && (
            !data.exists() ? newData.val() === auth.uid : newData.val() === data.val()
          )"
        },
        "manageId": {
          ".validate": "newData.isString() && newData.val().matches(/^[A-Z]{2,4}-[0-9]{3,6}$/)"
        },
        "managePrefix": {
          ".validate": "newData.isString() && newData.val().length >= 2 && newData.val().length <= 4"
        },
        "manageNextNumber": {
          ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 999999"
        },

        "activity_logs": {
          ".indexOn": ["timestamp", "action"],
          "$logId": {
            ".validate": "newData.hasChildren(['actorUid', 'actorName', 'timestamp', 'action'])",
            "actorUid": {
              ".validate": "newData.isString()"
            },
            "actorName": {
              ".validate": "newData.isString() && newData.val().length <= 100"
            },
            "description": {
              ".validate": "newData.isString() && newData.val().length <= 500"
            },
            "timestamp": {
              ".validate": "newData.isNumber() || newData.isString()"
            },
            "action": {
              ".validate": "newData.isString() && newData.val().matches(/^(status_update|assignee_update|rename|delete|create|automation_qc|comment|task_assigned)$/)"
            },
            "path": {
              ".validate": "newData.isString() && newData.val().length <= 500"
            },
            "entityType": {
              ".validate": "newData.isString() && newData.val().matches(/^(client|project|product|task|subtask)$/)"
            },
            "source": {
              ".validate": "newData.isString() && newData.val().length <= 50"
            },
            "assigneeUid": {
              ".validate": "newData.isString() && newData.val().length <= 128"
            },
            "sourcePath": {
              ".validate": "newData.isString() && newData.val().length <= 500"
            }
          }
        },

        "projects": {
          ".indexOn": ["status", "createdAt", "manageId"],
          "$projectId": {
            ".validate": "newData.hasChildren(['name', 'createdAt'])",

            "name": {
              ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 200"
            },
            "createdAt": {
              ".validate": "newData.isString()"
            },
            "manageId": {
              ".validate": "newData.isString() && newData.val().matches(/^[A-Z]{2,4}-[0-9]{3,6}$/)"
            },
            "status": {
              ".validate": "newData.isString() && newData.val().matches(/^(Pendiente|En proceso|Finalizado)$/)"
            },

            "products": {
              ".indexOn": ["status", "createdAt", "manageId"],
              "$productId": {
                ".validate": "newData.hasChildren(['name', 'createdAt'])",

                "name": {
                  ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 200"
                },
                "createdAt": {
                  ".validate": "newData.isString()"
                },
                "manageId": {
                  ".validate": "newData.isString() && newData.val().matches(/^[A-Z]{2,4}-[0-9]{3,6}$/)"
                },
                "status": {
                  ".validate": "newData.isString() && newData.val().matches(/^(Pendiente|En proceso|Finalizado)$/)"
                },

                "tasks": {
                  ".indexOn": ["status", "assigneeUid", "dueDate", "priority", "manageId"],
                  "$taskId": {
                    ".validate": "newData.hasChildren(['name', 'createdAt'])",

                    "name": {
                      ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 300"
                    },
                    "createdAt": {
                      ".validate": "newData.isString()"
                    },
                    "manageId": {
                      ".validate": "newData.isString() && newData.val().matches(/^[A-Z]{2,4}-[0-9]{3,6}$/)"
                    },
                    "status": {
                      ".validate": "newData.isString() && newData.val().matches(/^(Pendiente|En proceso|Finalizado)$/)"
                    },
                    "assigneeUid": {
                      ".validate": "newData.isString() && newData.val().length <= 128"
                    },
                    "description": {
                      ".validate": "newData.isString() && newData.val().length <= 2000"
                    },
                    "priority": {
                      ".validate": "newData.isString() && newData.val().matches(/^(Alta|Media|Baja)$/)"
                    },
                    "dueDate": {
                      ".validate": "newData.isString()"
                    },

                    "automation": {
                      ".validate": "newData.hasChildren(['template', 'createdByUid', 'createdAt'])"
                    },

                    "comments": {
                      ".indexOn": ["createdAt"],
                      "$commentId": {
                        ".validate": "newData.hasChildren(['text', 'userId', 'userName', 'createdAt'])",
                        ".write": "auth != null && (
                          !data.exists() ||
                          data.child('userId').val() === auth.uid ||
                          root.child('users').child(auth.uid).child('role').val() === 'admin'
                        )",
                        "text": {
                          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 2000"
                        },
                        "userId": {
                          ".validate": "newData.isString() && newData.val() === auth.uid"
                        },
                        "userName": {
                          ".validate": "newData.isString() && newData.val().length <= 100"
                        },
                        "userDepartment": {
                          ".validate": "newData.isString() && newData.val().length <= 100"
                        },
                        "userPhoto": {
                          ".validate": "newData.isString()"
                        },
                        "createdAt": {
                          ".validate": "newData.isString()"
                        }
                      }
                    },

                    "subtasks": {
                      ".indexOn": ["status", "assigneeUid", "manageId"],
                      "$subtaskId": {
                        ".validate": "newData.hasChildren(['name', 'createdAt'])",
                        "name": {
                          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 300"
                        },
                        "createdAt": {
                          ".validate": "newData.isString()"
                        },
                        "manageId": {
                          ".validate": "newData.isString() && newData.val().matches(/^[A-Z]{2,4}-[0-9]{3,6}$/)"
                        },
                        "status": {
                          ".validate": "newData.isString() && newData.val().matches(/^(Pendiente|En proceso|Finalizado)$/)"
                        },
                        "assigneeUid": {
                          ".validate": "newData.isString() && newData.val().length <= 128"
                        }
                      }
                    }
                  }
                }
              }
            },

            "tasks": {
              ".indexOn": ["status", "assigneeUid", "dueDate", "priority", "manageId"],
              "$taskId": {
                ".validate": "newData.hasChildren(['name', 'createdAt'])",

                "name": {
                  ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 300"
                },
                "createdAt": {
                  ".validate": "newData.isString()"
                },
                "manageId": {
                  ".validate": "newData.isString() && newData.val().matches(/^[A-Z]{2,4}-[0-9]{3,6}$/)"
                },
                "status": {
                  ".validate": "newData.isString() && newData.val().matches(/^(Pendiente|En proceso|Finalizado)$/)"
                },
                "assigneeUid": {
                  ".validate": "newData.isString() && newData.val().length <= 128"
                },
                "description": {
                  ".validate": "newData.isString() && newData.val().length <= 2000"
                },
                "priority": {
                  ".validate": "newData.isString() && newData.val().matches(/^(Alta|Media|Baja)$/)"
                },
                "dueDate": {
                  ".validate": "newData.isString()"
                },

                "automation": {
                  ".validate": "newData.hasChildren(['template', 'createdByUid', 'createdAt'])"
                },

                "comments": {
                  ".indexOn": ["createdAt"],
                  "$commentId": {
                    ".validate": "newData.hasChildren(['text', 'userId', 'userName', 'createdAt'])",
                    ".write": "auth != null && (
                      !data.exists() ||
                      data.child('userId').val() === auth.uid ||
                      root.child('users').child(auth.uid).child('role').val() === 'admin'
                    )",
                    "text": {
                      ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 2000"
                    },
                    "userId": {
                      ".validate": "newData.isString() && newData.val() === auth.uid"
                    },
                    "userName": {
                      ".validate": "newData.isString() && newData.val().length <= 100"
                    },
                    "userDepartment": {
                      ".validate": "newData.isString() && newData.val().length <= 100"
                    },
                    "userPhoto": {
                      ".validate": "newData.isString()"
                    },
                    "createdAt": {
                      ".validate": "newData.isString()"
                    }
                  }
                },

                "subtasks": {
                  ".indexOn": ["status", "assigneeUid", "manageId"],
                  "$subtaskId": {
                    ".validate": "newData.hasChildren(['name', 'createdAt'])",
                    "name": {
                      ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 300"
                    },
                    "createdAt": {
                      ".validate": "newData.isString()"
                    },
                    "manageId": {
                      ".validate": "newData.isString() && newData.val().matches(/^[A-Z]{2,4}-[0-9]{3,6}$/)"
                    },
                    "status": {
                      ".validate": "newData.isString() && newData.val().matches(/^(Pendiente|En proceso|Finalizado)$/)"
                    },
                    "assigneeUid": {
                      ".validate": "newData.isString() && newData.val().length <= 128"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "automations": {
      ".read": "auth != null",
      ".indexOn": ["createdBy", "enabled", "createdAt"],

      "$automationId": {
        ".write": "auth != null && (
          root.child('users').child(auth.uid).child('role').val() === 'admin' ||
          !data.exists() ||
          data.child('createdBy').val() === auth.uid
        )",
        ".validate": "newData.hasChildren(['name', 'createdBy', 'createdAt'])",

        "name": {
          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 200"
        },
        "createdBy": {
          ".validate": "newData.isString() && (
            !data.exists() ? newData.val() === auth.uid : newData.val() === data.val()
          )"
        },
        "createdAt": {
          ".validate": "newData.isString() || newData.isNumber()"
        },
        "enabled": {
          ".validate": "newData.isBoolean()"
        },
        "status": {
          ".validate": "newData.isString() && newData.val().length <= 50"
        },
        "scope": {
          ".validate": "newData.hasChildren(['type'])"
        },
        "triggers": {
          ".validate": "newData.exists()"
        },
        "actions": {
          ".validate": "newData.exists()"
        }
      }
    },

    "notifications": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid || auth != null",
        ".indexOn": ["createdAt", "read"],

        "$notificationId": {
          ".validate": "newData.hasChildren(['title', 'createdAt'])",
          "title": {
            ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 200"
          },
          "taskName": {
            ".validate": "newData.isString() && newData.val().length <= 300"
          },
          "manageId": {
            ".validate": "newData.isString() && newData.val().length <= 20"
          },
          "entityType": {
            ".validate": "newData.isString() && newData.val().matches(/^(task|subtask|project|product|client)$/)"
          },
          "path": {
            ".validate": "newData.isString() && newData.val().length <= 500"
          },
          "fromUid": {
            ".validate": "newData.isString() && newData.val().length <= 128"
          },
          "fromName": {
            ".validate": "newData.isString() && newData.val().length <= 100"
          },
          "read": {
            ".validate": "newData.isBoolean()"
          },
          "createdAt": {
            ".validate": "newData.isNumber() || newData.isString()"
          }
        }
      }
    },

    "security_logs": {
      ".read": "root.child('users').child(auth.uid).child('role').val() === 'admin'",
      ".write": false,
      ".indexOn": ["timestamp", "eventType", "userId"]
    },

    "security_alerts": {
      ".read": "root.child('users').child(auth.uid).child('role').val() === 'admin'",
      ".write": "root.child('users').child(auth.uid).child('role').val() === 'admin'",
      ".indexOn": ["timestamp", "severity", "acknowledged"],

      "$alertId": {
        "acknowledged": {
          ".write": "root.child('users').child(auth.uid).child('role').val() === 'admin'"
        }
      }
    },

    "system": {
      ".read": false,
      ".write": false,

      "rate_limits": {
        "$uid": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid",
          "$action": {
            "count": {
              ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 1000"
            },
            "windowStart": {
              ".validate": "newData.isNumber()"
            }
          }
        }
      },

      "audit_log": {
        ".read": "root.child('users').child(auth.uid).child('role').val() === 'admin'",
        ".indexOn": ["timestamp", "action"],
        "$logId": {
          ".write": false
        }
      },

      "backup_reminders": {
        ".read": "root.child('users').child(auth.uid).child('role').val() === 'admin'",
        ".indexOn": ["timestamp"],
        "$reminderId": {
          ".write": false
        }
      }
    }
  }
}
